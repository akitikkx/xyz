<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="App.Theme.List" parent="App.Theme">
        <item name="android:windowExitTransition">@transition/article_list_exit</item>
        <item name="android:paddingBottom">@dimen/card_title_area_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/card_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_padding_horizontal</item>
    </style>

</resources>